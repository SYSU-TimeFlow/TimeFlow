{
  "productName": "TimeFlow",
  "files": ["main.js", "./dist", "preload.js", "ipcHandlers.js"],
  "directories": {
    "output": "./build"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "installerIcon": "./assets/icon.ico",
    "uninstallerIcon": "./assets/icon.ico",
    "uninstallDisplayName": "TimeFlow",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "TimeFlow",
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "icon": "./assets/icon.ico"
  },
  "mac": {
    "icon": "./assets/icon.icns",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": ["AppImage", "tar.gz"], // Arch 用户常用格式
    "icon": "./assets/icon.png",      // 必须提供 PNG 图标（至少 512x512）
    "category": "Utility",            // 应用分类（如 Utility、Development 等）
  }
}
